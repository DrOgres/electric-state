<div class="flexcol gap-small">

    <div class="weapon-group border-bottom-thick">
        {{> "systems/electric-state/templates/actors/parts/weapons.hbs"}}
    </div>

    <div class="explosives-group  border-bottom-thick">
        <div class="group-header flexrow middle border-bottom-thin space-between gap-med fw-600 fs-200 all-caps">
            <div class="mw-150px flexrow middle">{{localize "estate.UI.EXPLOSIVE"}}</div>
            <div class="stat-group grid four-col gap-med middle">
                <div>{{localize "estate.UI.BONUS"}}</div>
                <div>{{localize "estate.UI.BP"}}</div>
                <div>{{localize "estate.UI.RANGE_MIN"}}</div>
                <div>{{localize "estate.UI.RANGE_MAX"}}</div>
            </div>
            <div class="button-group grid three-col mw-75px">
                <div class="holder"></div>
                <div class="item-create fs-500" data-type="explosive">&plus;</div>
                <div class="holder"></div>
            </div>
        </div>
        {{#each items as |item|}}
        {{#if item.isExplosive}}
        <div class=" item item-row flexrow  middle border-bottom-thin space-between gap-med"
            data-item-id="{{item._id}}">
            <div class="rollable mw-150px flexrow middle" data-type="weapon" data-item-id="{{item._id}}">
                <div class="item-icon mw-35px"><img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="25"
                        width="25" />
                </div>
                <div class="name no-break middle">
                    {{item.name}}
                </div>
            </div>
            <div class="stat-group grid four-col gap-med">
                <div>&plus; {{item.system.modifier.value}}</div>
                <div>{{item.system.blast}}</div>
                <div>{{#dataLocalization item.system.range.min 'range'}}{{/dataLocalization}}</div>
                <div>{{#dataLocalization item.system.range.max 'range'}}{{/dataLocalization}}</div>
            </div>
            <div class="button-group grid three-col mw-75px" data-item-id="{{item._id}}">
                {{#if item.flags.isFav}}
                <div class="toggle-fav"><i class="fa-solid fa-star"></i></div>
                {{/if}}
                {{#unless item.flags.isFav}}
                <div class="toggle-fav"><i class="fa-regular fa-star"></i></div>
                {{/unless}}
                <div class="item-edit"><i class="fa-solid fa-pen-to-square"></i></div>
                <div class="item-delete"><i class="fa-solid fa-trash"></i></div>
            </div>
        </div>
        {{/if}}
        {{/each}}
    </div>

    <div class="armor-group border-bottom-thick">
        <div class="group-header flexrow border-bottom-thin space-between gap-med fw-600 fs-200 all-caps">
            <div class="mw-150px flexrow middle">{{localize "estate.UI.ARMOR"}}</div>
            <div class="stat-group grid three-col middle">
                <div>{{localize "estate.UI.EQUIP"}}</div>
                <div>{{localize "estate.UI.BONUS"}}</div>
                <div>{{localize "estate.UI.ARMOR_PENALTY"}}</div>
            </div>
            <div class="button-group grid three-col mw-75px">
                <div class="holder"></div>
                <div class="item-create fs-500" data-type="armor">&plus;</div>
                <div class="holder"></div>
            </div>
        </div>
        {{#each items as |item|}}
        {{#if item.isArmor}}
        <div class=" item item-row flexrow  middle border-bottom-thin space-between gap-med"
            data-item-id="{{item._id}}">

            <div class="rollable mw-150px flexrow middle" data-type="armor" data-item-id="{{item._id}}">
                <div class="item-icon mw-35px"><img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="25"
                        width="25" />
                </div>
                <div class="name no-break middle">
                    {{item.name}}
                </div>
            </div>

            <div class="stat-group grid three-col">
                {{#if item.flags.isEquipped}}
                <div class="toggle-equip"><i class="fa-solid fa-shield"></i></div>
                {{/if}}
                {{#unless item.flags.isEquipped}}
                <div class="toggle-equip"><i class="fa-regular fa-shield"></i></div>
                {{/unless}}

                <div class="rate">
                    {{item.system.modifier.value}}
                    /
                    {{item.system.modifier.max}}
                </div>

                <div class="agility-penalty">
                    {{item.system.agiltyModifier}}
                </div>

            </div>


            <div class="button-group grid three-col mw-75px" data-item-id="{{item._id}}">
                {{#if item.flags.isFav}}
                <div class="toggle-fav"><i class="fa-solid fa-star"></i></div>
                {{/if}}
                {{#unless item.flags.isFav}}
                <div class="toggle-fav"><i class="fa-regular fa-star"></i></div>
                {{/unless}}
                <div class="item-edit"><i class="fa-solid fa-pen-to-square"></i></div>
                <div class="item-delete"><i class="fa-solid fa-trash"></i></div>
            </div>
        </div>
        {{/if}}
        {{/each}}
    </div>

    <div class="gear-group border-bottom-thick">
        <div class="group-header flexrow border-bottom-thin space-between gap-med fw-600 fs-200 all-caps">
            <div class="mw-150px flexrow middle">{{localize "estate.UI.GEAR"}}</div>
            <div class="stat-group grid four-col middle">
                <div>{{localize "estate.UI.BONUS"}}</div>
                <div>{{localize "estate.UI.ATTRIBUTE"}}</div>
                <div>{{localize "estate.UI.USES"}}</div>
                <div>{{localize "estate.UI.TYPE"}}</div>
            </div>
            <div class="button-group grid three-col mw-75px">
                <div class="holder"></div>
                <div class="item-create fs-500" data-type="gear">&plus;</div>
                <div class="holder"></div>
            </div>
        </div>

        {{#each items as |item|}}
        {{#if item.isGear}}
        <div class="item item-row flexrow  middle border-bottom-thin space-between gap-med" data-item-id="{{item._id}}">


            <div class="mw-150px flexrow middle" data-type="armor" data-item-id="{{item._id}}">
                <div class="item-icon">
                    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="25" width="25" />
                </div>
                <div>{{item.name}}</div>
            </div>

            <div class="stat-group grid four-col">

                {{#if item.system.isModifier}}
                <div class="modifiier">
                    {{item.system.modifier.value}} / {{item.system.modifier.max}}
                </div>
                <div class="attribute">
                    {{#dataLocalization item.system.attribute 'attribute'}}{{/dataLocalization}}
                </div>
                {{/if}}
                {{#unless item.system.isModifier}}
                <div class="hold"></div>
                <div class="hold"></div>
                {{/unless}}

                {{#if item.system.isConsumable}}
                <div class="consumable">
                    Uses: {{item.system.uses}}
                </div>
                <div class="use-type">
                    {{#dataLocalization item.system.useType 'useType'}}{{/dataLocalization}}
                </div>
                {{/if}}
                {{#unless item.system.isConsumable}}
                <div class="hold"></div>
                <div class="hold"></div>
                {{/unless}}

            </div>

            <div class="button-group grid three-col mw-75px" data-item-id="{{item._id}}">
                {{#if item.flags.isFav}}
                <div class="toggle-fav"><i class="fa-solid fa-star"></i></div>
                {{/if}}
                {{#unless item.flags.isFav}}
                <div class="toggle-fav"><i class="fa-regular fa-star"></i></div>
                {{/unless}}
                <div class="item-edit" data-item-id="{{item._id}}"><i class="fa-solid fa-pen-to-square"></i></div>
                <div class="item-delete" data-item-id="{{item._id}}"><i class="fa-solid fa-trash"></i></div>
            </div>
        </div>
        {{/if}}
        {{/each}}
    </div>

    <div class="drone-group border-bottom-thick">
        <div class="group-header flexrow border-bottom-thin space-between gap-med fw-600 fs-200 all-caps">
            <div class="mw-150px flexrow middle">{{localize "estate.UI.DRONE"}}</div>
            <div class="stat-group grid two-col center middle">
                <div class="attack-group grid three-col">
                    <div class="equip">{{localize "estate.UI.EQUIP"}}</div>
                    <div class="attack">{{localize "estate.UI.ATTACK"}}</div>
                    <div class="armor">{{localize "estate.UI.ARMOR"}}</div>
                </div>
                <div class="attributes grid three-col">

                    <div>{{localize "estate.ATTRIBUTE.STR_ABV"}}</div>
                    <div>{{localize "estate.ATTRIBUTE.AGI_ABV"}}</div>
                    <div>{{localize "estate.UI.HULL"}}</div>
                </div>
            </div>
            <div class="button-group grid three-col mw-75px">
                <div class="holder"></div>
                <div class="item-create fs-500" data-type="drone">&plus;</div>
                <div class="holder"></div>
            </div>
        </div>
        {{#each items as |item|}}
        {{#if item.isDrone}}
        <div class="item item-row flexrow  middle border-bottom-thin space-between gap-med" data-item-id="{{item._id}}">

            <div class="mw-150px flexrow middle" data-type="armor" data-item-id="{{item._id}}">
                <div class="item-icon">
                    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="25" width="25" />
                </div>
                <div>{{item.name}}</div>
            </div>


            <div class="stat-group grid two-col center middle">

                <div class="attack-group grid three-col">
                    {{#if item.flags.isEquipped}}
                    <div class="toggle-equip mw-50px"><i class="fa-solid fa-robot"></i></div>
                    {{/if}}
                    {{#unless item.flags.isEquipped}}
                    <div class="toggle-equip mw-50px"><i class="fa-regular fa-robot"></i></div>
                    {{/unless}}
                    <div class="drone-attack rollable mw-50px" data-type="drone-attack" data-item-id="{{item._id}}"><i
                            class="fa-solid fa-gun"></i></div>
                    <div class="drone-armor rollable mw-50px" data-type="drone-armor" data-item-id="{{item._id}}"><i
                            class="fa-solid fa-shield"></i></div>

                </div>


                <div class="attributes grid three-col">
                    <div class="strength">{{item.system.attributes.strength}}</div>
                    <div class="agility">{{item.system.attributes.agility}}</div>
                    <div class="hull">{{item.system.hull.value}} / {{item.system.hull.max}}</div>
                </div>
            </div>

            <div class="button-group grid three-col mw-75px" data-item-id="{{item._id}}">
                {{#if item.flags.isFav}}
                <div class="toggle-fav"><i class="fa-solid fa-star"></i></div>
                {{/if}}
                {{#unless item.flags.isFav}}
                <div class="toggle-fav"><i class="fa-regular fa-star"></i></div>
                {{/unless}}
                <div class="item-edit" data-item-id="{{item._id}}"><i class="fa-solid fa-pen-to-square"></i></div>
                <div class="item-delete" data-item-id="{{item._id}}"><i class="fa-solid fa-trash"></i></div>
            </div>
        </div>
        {{/if}}
        {{/each}}
    </div>

    <div class="neurocaster-group">
        <div class="group-header flexrow">
            <h4>neurocaster</h4>
            <div class="item-create" data-type="neurocaster">new neurocaster</div>
        </div>
        {{#each items as |item|}}
        {{#if item.isNeurocaster}}
        <div class=" item item-row flexrow " data-item-id="{{item._id}}">
            <div>{{item.name}}</div>
            {{#if item.flags.isEquipped}}
            <div class="toggle-equip"><i class="fa-solid fa-head-side-gear"></i></div>
            {{/if}}
            {{#unless item.flags.isEquipped}}
            <div class="toggle-equip"><i class="fa-light fa-head-side-gear"></i></div>
            {{/unless}}
            {{#if item.flags.isFav}}
            <div class="toggle-fav"><i class="fa-solid fa-star"></i></div>
            {{/if}}
            {{#unless item.flags.isFav}}
            <div class="toggle-fav"><i class="fa-regular fa-star"></i></div>
            {{/unless}}
            <div class="item-edit" data-item-id="{{item._id}}"><i class="fa-solid fa-pen-to-square"></i></div>
            <div class="item-delete" data-item-id="{{item._id}}"><i class="fa-solid fa-trash"></i></div>
        </div>
        {{/if}}
        {{/each}}
    </div>

</div>