<div class="flexcol">
    <div class="flexrow">
        <div>
            Strength {{actor.system.strength}}
             <input type="number" name="system.strength" value="{{actor.system.strength}}" data-dtype="Number"/>
        </div>
        <div>
            Agility
            <input type="number" name="system.agility" value="{{actor.system.agility}}" data-dtype="Number"/>
        </div>
        <div>
            Wits
            <input type="number" name="system.wits" value="{{actor.system.wits}}" data-dtype="Number"/>
        </div>
        <div>
            Empathy
            <input type="number" name="system.empathy" value="{{actor.system.empathy}}" data-dtype="Number"/>
        </div>
    </div>
    <div class="flexrow">
        <div>
            Health <input type="number" name="system.health.value" value="{{actor.system.health.value}}" data-dtype="Number" /> / {{actor.system.health.max}}
        </div>

        <div>
            Hope <input type="number" name="system.hope.value" value="{{actor.system.hope.value}}" data-dtype="Number" /> / {{actor.system.hope.max}}
        </div>
    </div>
    <div class="flexrow">
        <div>
            Bliss <input type="number" name="system.bliss" value="{{actor.system.bliss}}" data-dtype="Number" /> 
        </div>

        <div>
            Permanent <input type="number" name="system.permanent" value="{{actor.system.permanent}}" data-dtype="Number" /> 
        </div>
    </div>
</div>