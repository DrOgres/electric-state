<div class="flexcol border-thick padding-small">
    <div class="grid cols-4-25 all-caps fw-600 border-bottom-thin">
        <div class="name ">{{localize "estate.UI.TALENT"}}</div>
        <div class="type ">{{localize "estate.UI.TYPE"}}</div>
        <div class="bonus center">{{localize "estate.UI.BONUS"}}</div>
        <div class="item-create align-bottom mi-small text-right" data-type="talent" title="{{localize "estate.UI.CREATE"}} {{localize "estate.UI.TALENT"}}">&plus;</div>
    </div>
    <div class="talent-group list">
        {{#each items as |talent|}}
        {{#if talent.isTalent}}
        <div class="item grid cols-5-20 all-caps fw-500 fs-200 align-start w-100 border-bottom-thin" data-item-id="{{talent._id}}">
            <div class="show-details mw-25px clickable" data-item-id="{{item._id}}">
                    <i class="fa-solid fa-chevron-down"></i>
            </div>
            <div class="item overflow-elipsis" data-item-id="{{talent._id}}" title="{{talent.name}}">{{talent.name}}</div>
            <div class="modify text-left overflow-elipsis" title="{{dataLocalization talent.system.type 'talent'}}">{{#dataLocalization talent.system.type 'talent'}}{{/dataLocalization}}</div>
            <div class="mod center">{{talent.system.modifier.value}}</div>
            <div class="button-group align-bottom flexrow text-right justify-content-end gap-small"  data-item-id="{{talent._id}}">
                <div class="to-chat"><i class="fa-solid fa-comment-alt-lines"  title="{{localize "estate.UI.TO_CHAT"}}"></i></div>
                <div class="item-edit mw-fit" title="{{localize "estate.UI.EDIT"}}"><i
                        class="fa-solid fa-pen-to-square"></i></div>
                <div class="item-delete mw-fit"  title="{{localize "estate.UI.DELETE"}}"><i
                        class="fa-solid fa-trash"></i></div>
            </div>
        </div>
        {{/if}}
        {{/each}}
    </div>
</div>
