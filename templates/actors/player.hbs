<form class="actor-sheet {{cssClass}}" autocomplete="off">

    <header class="sheet-header">

    </header>

    <div class="flexrow">
        <div class="portrait">
            <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="160" width="160" />
        </div>
        <div class="flexrow">
            <h1 class="charname">
                <lable>{{localize "estate.HEAD.NAME"}}</lable>
                <input name="name" type="text" value="{{actor.name}}" placeholder="name" />
            </h1>
            <h2>
                <lable>{{localize "estate.HEAD.ARCHETYPE"}}</lable>
                {{log actor}}
                <input name="system.archetype" type="text" value="{{actor.system.archetype}}" placeholder="archetype" />
            </h2>

        </div>

    </div>
    <div class="flexcol">
        <div class="sheet-tabs tabs flexrow" data-group="primary">
            <b class="item" data-tab="main">{{localize "estate.UI.MAIN"}}</b>
            <b class="item" data-tab="gear">{{localize "estate.UI.GEAR"}}</b>
            <b class="item" data-tab="notes">{{localize "estate.UI.NOTES"}}</b>
        </div>
        <div class="sheet-body">
            <div class="tab" data-group="primary" data-tab="main">
                <div class="main flexcol">
                    {{> "systems/electric-state/templates/actors/parts/player-main.hbs"}}
                </div>
            </div>

            <div class="tab" data-group="primary" data-tab="gear">
                <div class="main flexcol">
                    {{> "systems/electric-state/templates/actors/parts/player-gear.hbs"}}
                </div>
            </div>

            <div class="tab" data-group="primary" data-tab="notes">
                <div class="main flexcol">
                    {{> "systems/electric-state/templates/actors/parts/player-notes.hbs"}}
                </div>
            </div>
        </div>
    </div>

</form>