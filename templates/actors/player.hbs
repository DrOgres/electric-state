<form class="actor-sheet {{cssClass}}" autocomplete="off">

    <header class="sheet-header">

    </header>

    <div class="grid col-160-1fr border-thick">
        <div class="portrait">
            <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="160" width="160" />
        </div>
        <div class="flexcol padding-small">
            <div class="flexrow align-content-start gap-small">
                <div class="charname grid col-20-80 align-bottom border-bottom">
                    <lable class="shrink">{{localize "estate.HEAD.NAME"}}</lable>
                    <input name="name" type="text" value="{{actor.name}}" placeholder="name" />
                </div>
                <div class="archtype grid col-33-67 align-bottom border-bottom">
                    <lable>{{localize "estate.HEAD.ARCHETYPE"}}</lable>
                    <input name="system.archetype" type="text" value="{{actor.system.archetype}}"
                        placeholder="archetype" />
                </div>

            </div>
            <div class="flexrow align-content-start gap-small">
                <div class="song grid col-30-70 align-bottom border-bottom">
                    <lable class="shrink">{{localize "estate.HEAD.SONG"}}</lable>
                    <input name="system.song" type="text" value="{{actor.system.song}}" placeholder="favorite song" />
                </div>
            </div>
            <div class="flexrow align-content-start gap-small">
                <div class="description grid col-20-80 align-bottom border-bottom">
                    <lable class="shrink">{{localize "estate.HEAD.DESC"}}</lable>
                    <textarea name="system.description">{{actor.system.description}}</textarea>
                </div>
            </div>
            <div class="flexrow align-content-start gap-small">
                <div class="dream grid col-20-80 align-bottom border-bottom">

                    <lable class="shrink">{{localize "estate.HEAD.DREAM"}}</lable>
                    <input name="system.dream" type="text" value="{{actor.system.dream}}" placeholder="dream" />
                </div>
                <div class="flaw  grid col-20-80 align-bottom border-bottom">
                    <lable class="shrink">{{localize "estate.HEAD.FLAW"}}</lable>
                    <input name="system.flaw" type="text" value="{{actor.system.flaw}}" placeholder="flaw" />
                </div>
            </div>
        </div>

    </div>

    <div class="flexcol">
        <div class="sheet-tabs tabs flexrow" data-group="primary">
            <b class="item" data-tab="main">{{localize "estate.UI.MAIN"}}</b>
            <b class="item" data-tab="gear">{{localize "estate.UI.GEAR"}}</b>
            <b class="item" data-tab="notes">{{localize "estate.UI.JOURNEY"}}</b>
        </div>
        <div class="sheet-body">
            <div class="tab" data-group="primary" data-tab="main">
                <div class="main flexcol">
                    {{> "systems/electric-state/templates/actors/parts/player-main.hbs"}}
                </div>
            </div>

            <div class="tab" data-group="primary" data-tab="gear">
                <div class="main flexcol">
                    {{> "systems/electric-state/templates/actors/parts/player-gear.hbs"}}
                </div>
            </div>

            <div class="tab" data-group="primary" data-tab="notes">
                <div class="main flexcol">
                    {{> "systems/electric-state/templates/actors/parts/player-notes.hbs"}}
                </div>
            </div>
        </div>
    </div>

</form>