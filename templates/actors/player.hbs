<form class="actor-sheet {{cssClass}} border-thick sheet-container" autocomplete="off">
    <div class="sheet-container">
        <div class="grid col-160-1fr border-bottom-thick">
            <div class="portrait">
                <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="160" width="160" />
            </div>
            <div class="flexcol padding-small">
                <div class="flexrow align-content-start gap-small">
                    <div class="charname grid col-20-80 align-bottom border-bottom">
                        <label class="shrink">{{localize "estate.HEAD.NAME"}}</label>
                        <input name="name" type="text" value="{{actor.name}}" placeholder="name" />
                    </div>
                    <div class="archtype grid col-33-67 align-bottom border-bottom">
                        <label>{{localize "estate.HEAD.ARCHETYPE"}}</label>
                        <input name="system.archetype" type="text" value="{{actor.system.archetype}}"
                            placeholder="archetype" />
                    </div>

                </div>
                <div class="flexrow align-content-start gap-small">
                    <div class="song grid col-30-70 align-bottom border-bottom">
                        <label class="shrink">{{localize "estate.HEAD.SONG"}}</label>
                        <input name="system.song" type="text" value="{{actor.system.song}}"
                            placeholder="favorite song" />
                    </div>
                </div>
                <div class="flexrow align-content-start gap-small">
                    <div class="description grid col-20-80 align-bottom border-bottom">
                        <label class="shrink">{{localize "estate.HEAD.DESC"}}</label>
                        <textarea class="input-text"  name="system.description">{{actor.system.description}}</textarea>
                    </div>
                </div>
                <div class="flexrow align-content-start gap-small">
                    <div class="dream grid col-20-80 align-bottom border-bottom margin-small">

                        <label class="shrink">{{localize "estate.HEAD.DREAM"}}</label>
                        <textarea class="input-text" name="system.dream" cols="21" placeholder="{{localize "estate.HEAD.DREAM"}}">{{actor.system.dream}}</textarea>
                                           </div>
                    <div class="flaw  grid col-20-80 align-bottom border-bottom margin-small">
                        <label class="shrink">{{localize "estate.HEAD.FLAW"}}</label>
                         <textarea class="input-text" name="system.flaw" cols="21"  placeholder="{{localize "estate.HEAD.FLAW"}}">{{actor.system.flaw}}</textarea>
                      
                    </div>
                </div>
            </div>
        </div>

        <div class="flexcol">
            <div class="sheet-tabs tabs flexrow border-bottom-thick" data-group="primary">
                <b class="item border-right-thick  padding-small" data-tab="main">{{localize "estate.UI.MAIN"}}</b>
                <b class="item border-right-thick  padding-small" data-tab="gear">{{localize "estate.UI.GEAR"}}</b>
                <b class="item  padding-small" data-tab="notes">{{localize "estate.UI.JOURNEY"}}</b>
            </div>
            <div class="sheet-body">
                <div class="tab" data-group="primary" data-tab="main">
                    <div class="main flexcol padding-small">
                        {{> "systems/electric-state/templates/actors/parts/player-main.hbs"}}
                    </div>
                </div>

                <div class="tab" data-group="primary" data-tab="gear">
                    <div class="gear flexcol padding-small">
                        {{> "systems/electric-state/templates/actors/parts/gear.hbs"}}
                    </div>
                </div>

                <div class="tab" data-group="primary" data-tab="notes">
                    <div class="notes flexcol padding-small">
                        {{> "systems/electric-state/templates/actors/parts/player-notes.hbs"}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>