<div class="card-holder grid  w-100" style="position: relative;">
  <img src={{token}} width="45" height="45" class="roll-token">

  <div class="grid col-20-80 border-thick ">
    <div class="image align-start flexcol bg-dark space-between h-100">
      <img src={{img}} width="45" class="roll-token" />
    </div>
    <div class="grid w-100 padding-med">

      <div class="name-price grid col-60-40 border-bottom-thin">
        <div class="name fw-600 fs-400 middle no-break overflow-elipsis">
          {{name}}
        </div>
        <div class="price flexrow all-caps fw-600 middle">
          <div class="text-right no-break">{{localize "estate.HEAD.PRICE"}}: $</div>
          <div>{{system.cost}}</div>
        </div>

      </div>

      <ul class="leaders fw-500">
        

        {{#if system.isModifier}}
        <li id="roll-modifier">
          <span for="roll-modifier">{{localize "estate.UI.GEAR_DICE"}}</span>
          <span>
          {{item.system.modifier.value}} / {{item.system.modifier.max}}
          </span>
        </li>
        <li>
          <span>{{localize "estate.UI.MOD_ATTR_ABV"}}</span>
          <span>{{#dataLocalization system.attribute 'attribute'}}{{/dataLocalization}}</span>
          
        </li>
        {{/if}}

        {{#if system.isConsumable}}
        <li id="consumable">
          <span>{{localize "estate.UI.USES"}}</span>
          <span>{{system.uses}}</span>
        </li>
        <li>
          <span>{{localize "estate.UI.USEDFOR"}}</span>
          <span>{{#dataLocalization system.useType 'useType'}}{{/dataLocalization}} + {{system.useValue}}</span>
        </li>
        <li>
          <span>{{localize "estate.UI.DRAWBACK"}}</span>
          <span>{{system.usePenaltyType}} - {{system.usePenalty}}</span>
        </li>        
        {{/if}}

      </ul>

      <div class="border-thin padding-small grid">
        <div class="all-caps fw-600">{{localize "estate.HEAD.DESC"}}</div>
        <div>{{item.system.description}}</div>
      </div>

    </div>
  </div>
</div>