<form class="{{cssClass}} flexcol" autocomplete="off">

  <h1 class="charname">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="160" width="160" />
    <label for="item-name">{{localize "estate.HEAD.NAME"}}</label>
    <input id="item-name" name="name" type="text" value="{{item.name}}" />
    <label for="cost">
      {{localize "estate.HEAD.COST"}}
    </label>
    <input id="cost" name="system.cost" type="text" value="{{item.system.cost}}" />
  </h1>
  <label for="description">description</label>
  <textarea id="description" name="system.description">{{item.system.description}}</textarea>
  Roll Modifier? <input type="checkbox" name="system.isModifier" id="roll-modifier-boolean" {{checked item.system.isModifier}} />
  {{#if item.system.isModifier}}
  <div id="roll-modifier" class="flexrow">
    <label for="roll-modifier">Roll Modifier</label>
    <input id="roll-modifier" name="system.modifier" type="text" value="{{item.system.modifier}}" />
  </div>
  {{/if}}

 {{#if item.system.isModifier}}
  <div class="broken">
    <label for="broken">Broken</label>
    <input id="broken" name="system.isBroken" type="checkbox" {{checked item.system.isBroken}} />
  </div>
  {{/if}}

</form>